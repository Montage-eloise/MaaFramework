{
    "json.schemas": [
        {
            "fileMatch": [
                "/sample/resource/pipeline/*.json"
            ],
            "url": "/tools/pipeline.schema.json"
        },
        {
            "fileMatch": [
                "/sample/interface.json"
            ],
            "url": "/tools/interface.schema.json"
        }
    ],
    "[json]": {
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.indentSize": "tabSize"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false
    },
    "cpplint.excludes": [
        "3rdparty",
        "build",
        "out"
    ],
    "cpplint.filters": [
        "-legal/copyright",
        "-whitespace/line_length",
        "-whitespace/comments",
        "-whitespace/braces",
        "-whitespace/newline",
        "-whitespace/indent",
        "-readability/braces",
        "-readability/inheritance",
        "-readability/todo",
        "-build/c++11",
        "-build/include_subdir",
        "-build/namespaces",
        "-build/include_what_you_use",
        "-runtime/references",
        "-runtime/string",
        "-runtime/indentation_namespace"
    ],
    "python.analysis.extraPaths": [
        "./source/binding/Python"
    ],
    "editor.formatOnSave": true,
    "clangd.arguments": [
        "--experimental-modules-support"
    ],
    "terminal.integrated.defaultEncoding": "utf8",
    "files.associations": {
        "*.cmake": "cmake",
        "algorithm": "cpp",
        "any": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
